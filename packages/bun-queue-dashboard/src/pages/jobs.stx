        <table class="w-full text-sm">
          <thead>
            <tr class="bg-slate-800 text-left">
              <th class="px-4 py-3 text-xs uppercase tracking-wider text-slate-400 font-medium">ID</th>
              <th class="px-4 py-3 text-xs uppercase tracking-wider text-slate-400 font-medium">Queue</th>
              <th class="px-4 py-3 text-xs uppercase tracking-wider text-slate-400 font-medium">Name</th>
              <th class="px-4 py-3 text-xs uppercase tracking-wider text-slate-400 font-medium">Status</th>
              <th class="px-4 py-3 text-xs uppercase tracking-wider text-slate-400 font-medium">Attempts</th>
              <th class="px-4 py-3 text-xs uppercase tracking-wider text-slate-400 font-medium">Created</th>
              <th class="px-4 py-3 text-xs uppercase tracking-wider text-slate-400 font-medium">Duration</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-700">
            @foreach(jobs as job)
              <tr class="hover:bg-slate-800/50">
                <td class="px-4 py-3 font-mono text-xs text-slate-300">{{ job.id }}</td>
                <td class="px-4 py-3 text-slate-300">{{ job.queue }}</td>
                <td class="px-4 py-3 text-slate-200 font-medium">{{ job.name }}</td>
