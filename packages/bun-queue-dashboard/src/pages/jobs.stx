<body>
  <div class="header">
    <div class="header-left">
      <span class="header-title">bun-queue</span>
      <nav class="header-nav">
        <a href="/" class="nav-btn">Overview</a>
        <a href="/queues" class="nav-btn">Queues</a>
        <a href="/jobs" class="nav-btn active">Jobs</a>
        <a href="/metrics" class="nav-btn">Metrics</a>
      </nav>
    </div>
  </div>

  <div class="main-content">
    <div class="page-header">
      <div>
        <h1 class="page-title">{{ title }}</h1>
        <p class="page-subtitle">Browse and filter job history</p>
      </div>
      <div>
        <select id="status-filter" class="form-select">
          @foreach(statuses as status)
            <option value="{{ status }}">{{ status }}</option>
          @endforeach
        </select>
      </div>
    </div>

    <div class="panel">
      @if(jobs.length === 0)
        <div class="empty-state">No jobs found matching the current filters.</div>
      @else
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Queue</th>
              <th>Name</th>
              <th>Status</th>
              <th class="text-right">Attempts</th>
              <th>Created</th>
              <th class="text-right">Duration</th>
            </tr>
          </thead>
          <tbody>
            @foreach(jobs as job)
              <tr>
                <td class="mono text-sm">{{ job.id }}</td>
                <td>{{ job.queue }}</td>
                <td class="text-name">{{ job.name }}</td>
                <td>
                  <span class="badge {{ job.status === 'completed' ? 'badge-success' : job.status === 'failed' ? 'badge-error' : job.status === 'active' ? 'badge-info' : job.status === 'waiting' ? 'badge-warning' : 'badge-muted' }}">{{ job.status }}</span>
                </td>
                <td class="text-right tabular-nums">{{ job.attempts }}/{{ job.maxAttempts }}</td>
                <td class="text-sm">{{ job.createdAt }}</td>
                <td class="text-right mono tabular-nums text-sm">{{ job.duration ? job.duration + 'ms' : '—' }}</td>
              </tr>
            @endforeach
          </tbody>
        </table>
      @endif
    </div>
  </div>
