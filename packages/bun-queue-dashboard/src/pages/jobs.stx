      <select id="status-filter" class="ml-2 bg-slate-800 text-slate-200 border border-slate-600 px-3 py-1.5 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
        @foreach(statuses as status)
          <option value="{{ status }}">{{ status }}</option>
        @endforeach
      </select>
    </label>
