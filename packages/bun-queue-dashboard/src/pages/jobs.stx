const statuses = ['all', 'waiting', 'active', 'completed', 'failed', 'delayed']
</script>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
