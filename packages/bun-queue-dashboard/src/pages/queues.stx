<body>
  <div class="header">
    <div class="header-left">
      <span class="header-title">bun-queue</span>
      <nav class="header-nav">
        <a href="/" class="nav-btn">Overview</a>
        <a href="/queues" class="nav-btn active">Queues</a>
        <a href="/jobs" class="nav-btn">Jobs</a>
        <a href="/metrics" class="nav-btn">Metrics</a>
      </nav>
    </div>
  </div>

  <div class="main-content">
    <div class="page-header">
      <div>
        <h1 class="page-title">{{ title }}</h1>
        <p class="page-subtitle">Monitor queue health and throughput</p>
      </div>
    </div>

    <div class="panel">
      @if(queues.length === 0)
        <div class="empty-state">No queues found. Start processing jobs to see queue metrics.</div>
      @else
        <table>
          <thead>
            <tr>
              <th>Queue</th>
              <th>Status</th>
              <th class="text-right">Waiting</th>
              <th class="text-right">Active</th>
              <th class="text-right">Completed</th>
              <th class="text-right">Failed</th>
              <th class="text-right">Throughput</th>
            </tr>
          </thead>
          <tbody>
            @foreach(queues as queue)
              <tr>
                <td class="text-name">{{ queue.name }}</td>
                <td>
                  @if(queue.paused)
                    <span class="badge badge-muted">Paused</span>
                  @else
                    <span class="badge badge-success">Active</span>
                  @endif
                </td>
                <td class="text-right tabular-nums">{{ queue.waiting }}</td>
                <td class="text-right tabular-nums">{{ queue.active }}</td>
                <td class="text-right tabular-nums">{{ queue.completed }}</td>
                <td class="text-right tabular-nums">{{ queue.failed }}</td>
                <td class="text-right tabular-nums">{{ queue.throughput }}/min</td>
              </tr>
            @endforeach
          </tbody>
        </table>
      @endif
    </div>
  </div>
