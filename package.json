{
  "name": "stx-dashboard",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Monitoring dashboards for bun-queue and httx, built with stx.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/stx-dashboard#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/stx-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/stx-dashboard/issues"
  },
  "scripts": {
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "lint": "bunx --bun pickier run --mode lint",
    "lint:fix": "bunx --bun pickier run --mode lint --fix",
    "format": "bunx --bun pickier run --mode format --write",
    "format:check": "bunx --bun pickier run --mode format --check",
    "typecheck": "bun --bun tsc --noEmit",
    "fresh": "bunx rimraf node_modules/ bun.lock && bun i",
    "changelog": "bunx logsmith --verbose",
    "release": "bun --bun run changelog && bunx --bun bumpx prompt --recursive"
  },
  "git-hooks": {
    "pre-commit": {
      "staged-lint": {
        "*.{js,ts,json,yaml,yml,md}": "bunx --bun pickier run --mode lint --fix"
      }
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "better-dx": "^0.2.6",
    "bun-plugin-dtsx": "^0.9.9",
    "pickier": "^0.1.20",
    "typescript": "^5.8.3"
  }
}
